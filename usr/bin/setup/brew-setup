#!/bin/bash

# Unless this option is given, aliases aren't expanded
# inside shell scripts

shopt -s expand_aliases
alias bi="brew install"
alias bc='brew install --cask' 

# Plain homebrew (cmd line) tools
bi bash rsync wget
bi tmux htop emacs micro mc
bi git hub
bi imagemagick
bi menumeters

# Cask (gui) installs
bc firefox zoom obs slack
bc visual-studio-code
bc google-backup-and-sync dropbox
bc lyx mactex 
bc vlc spotify
bc spectacle monitorcontrol flux fluor
bc keepassx
bc meld
